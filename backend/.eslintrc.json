{
    "env": {
        "node": true,
        "commonjs": true,
        "es2020": true,
        "browser": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "space-before-function-paren": [
            "error",
            "never"
        ],
        "eol-last": [
            "error",
            "never"
        ],
        "camelcase": "off",
        "no-shadow": "off",
        "no-console": "off",
        "no-unused-vars": "off",
        "tno-useless-return": "off",
        "max-len": "off",
        "no-use-before-define": "off",
        "object-curly-newline": "off",
        "prefer-arrow-callback": "off",
        "comma-dangle": "off",
        "no-useless-concat": "off",
        "func-names": "off",
        "consistent-return": "off",
        "no-underscore-dangle": "off"
    }
}